{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "ignoreFiles": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "responsive-hover",
          "responsive-focus",
          "responsive-group-hover",
          "responsive-group-focus",
          "focus-within",
          "motion-safe",
          "motion-reduce"
        ]
      }
    ]
  }
}
